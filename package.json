{
  "name": "carbon-footprint",
  "version": "1.0.0",
  "description": "Carbon Emissions Management",
  "main": "server.js",
  "type": "module",
  "jest": {
    "modulePathIgnorePatterns": [
      "package.json"
    ]
  },
  "scripts": {
    "start": "node --experimental-json-modules backend/server",
