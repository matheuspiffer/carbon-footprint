  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "concurrently": "^7.2.2",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19"
  }
}
